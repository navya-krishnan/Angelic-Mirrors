    <script>
        document.getElementById('retryPayment').addEventListener('click', function () {
            // Send a POST request to retry payment
            console.log("log");
            fetch('/razorpay', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(order => {
                    var options = {
                        "key": "rzp_test_lSbwNbIgtUL14w",
                        "amount": Number(totalPrice) * 100,
                        "currency": "INR",
                        "name": "Angelic Mirrors",
                        "description": "Payment for your order",
                        "image": "",
                        "order_id": order.id,
                        "handler": function (response) {
                            console.log(response);
                            placeOrder('Online'); // Call function to place order after successful payment
                        },
                        "prefill": {
                            "name": "Customer Name",
                            "email": "customer@example.com",
                            "contact": "9999999999"
                        },
                        "theme": {
                            "color": "#3399cc"
                        }
                    };
                    var rzp1 = new Razorpay(options);
                    rzp1.on('payment.failed', function (response) {
                        console.error('Payment failed:', response.error);
                        // Redirect to the payment failed page
                        window.location.href = '/paymentFailed';
                    });
                    rzp1.open();
                })
                .catch(function (error) {
                    console.error('Payment failed', error);
                    console.log("failed");
                    // Redirect to the payment failed page
                    window.location.href = '/paymentFailed';
                });
        });
    </script>

