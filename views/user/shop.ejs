	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="sort">
				<label for="sortSelect">Sort By:</label>
				<select id="sortSelect" onchange="sortProducts(this.value)">
					<option value="select" <%= sortOption === 'select' ? 'selected' : '' %>>Select</option>
					<option value="nameAsc" <%= sortOption === 'nameAsc' ? 'selected' : '' %>>Name (A-Z)</option>
					<option value="nameDesc" <%= sortOption === 'nameDesc' ? 'selected' : '' %>>Name (Z-A)</option>
				</select>
			</div>			

			<div class="row">
				<div class="col-md-12">
					<div class="product-filters" style="margin-top: 3%;">
						<ul>
							<li class="active" data-filter="*">All</li>
							<li data-filter=".WallMirror">Wall Mirrors</li>
							<li data-filter=".FloorMirror">Floor Mirrors</li>
							<li data-filter=".MakeupMirror">Makeup Mirrors</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="row product-lists">
				<% products.forEach((product,i)=> { %>
					<div class="col-lg-4 col-md-6 text-center <%= product.product_category.category_name.replace(/\s+/g, '') %>">
						<div class="single-product-item">
							<div class="product-image">
								<a href="/singleProduct/<%= product._id %>">
									<img src="/image/<%= product.product_image[0] %>" alt="Product image">
								</a>
							</div>
							<h3><%= product.product_name %></h3>
							<h4><%= product.product_category.category_name %></h4>
							<div class="price-container">
								<% if (product.offerPrice !== null) { %>
									<h4 style="text-decoration: line-through; color: red;">₹<%= product.product_price %></h4>
									<h4 style="color: green;">Offer Price: ₹<%= product.discount_Amount %></h4>
								<% } else { %>
									<h4>₹<%= product.product_price %></h4>
									<p>No offers available</p>
								<% } %>
							</div>				  
							<div>
								<% if (product.product_stock <= 0) { %>
									<h4 style="color: red;">Out of Stock</h4>
								<% } else { %>
									<h4 style="color: green;">Only <%= product.product_stock %> left</h4>
								<% } %>
							</div>
							<a href="/singleProduct/<%= product._id %>" class="cart-btn" style="margin-top: 4%;">View Product</a>
						</div>
					</div>
				<% }); %>
			</div> 				

			<!-- pagination -->
