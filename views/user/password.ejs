<%-include('header')-%>

<style>
    body {
        background-color: black;
        background-size: cover;
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .image {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 100px;
        padding-top: 50px;
    }

    .rightimage-container {
        position: relative;
        width: 100%;
        max-width: 400px; 
    }

    .leftimage, .rightimage {
    width:  400px; /* Set a specific width for both images */
    height:  500px; /* Set a specific height for both images */
    object-fit: cover; /* Scales the image to fill the container while maintaining aspect ratio */
    /* border-radius:  10px; To match the border-radius of the form container */
}

    .rightimage-container form {
        position: absolute;
        top: 50%;
        right: 70%;
        transform: translate(-50%, -50%);
        text-align: center;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 10px;
        width: 80%; /* Adjust width as needed */
    }

    input.form-control {
        margin-bottom: 10px;
    }

    input::placeholder {
  font-size:  60%;
}

    /* Media query for screens smaller than 768px */
    @media (max-width: 767.98px) {
        body {
            margin: 10px;
        }

        .image {
            margin-left: 25%;
        }

        .rightimage-container {
            max-width: none; /* Remove max-width to allow the image to expand */
        }

        .rightimage-container form {
            width: 90%; /* Adjust width for smaller screens */
        }
    }
</style>
<section class="vh-100 gradient-custom"> 
    <div class="container" >
        <div class="image bg-transparent text-dark" >
            <img src="/image/verify left.jpg" alt="" class="leftimage">
            <div class="rightimage-container">
                <img src="/image/verify right.jpg" alt="" class="rightimage">
                <form action="/forgototp" method="post" style="background-color: #D9D9D9;">
                    <h2 style="font-style:italic; text-decoration: underline; font-size: large;">FORGOT PASSWORD</h2>
                    <h6 style="font-size: small;  padding-top: 5%;">Enter the email address <br> registered with the account...</h6> 
                    <div class="form-outline form-white mb-4" style="padding-top: 5%;">
                        <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg" placeholder="Enter your email address here..!" required style="background-color: #C4C0BE;"/>
                    </div>
                    <button class="btn btn-outline-dark btn-lg px-5" type="submit" style="border-radius: 30px; font-size: small; background-color: #AC9C94; font-weight: bolder;">Send OTP</button><br><br>
                    <a href="/" style="color:black; font-size: small; ">Back To Login..!</a>
                </form>
            </div>
        </div>
    </div>
</section>



