    <script>
        function validateForm() {
            var productName = document.getElementById("productName").value.trim().toLowerCase(); // Convert product name to lowercase
            var productPrice = parseFloat(document.getElementById("productPrice").value);
            var productStock = parseInt(document.getElementById("productStock").value);
            var productImage = document.getElementById('productImage').value.trim()

            var nameError = document.getElementById('nameError');
            var priceError = document.getElementById('priceError');
            var stockError = document.getElementById('stockError');

            nameError.textContent = "";
            priceError.textContent = "";
            stockError.textContent = "";

            var lettersOnly = /^[a-zA-Z\s]+$/;

            if (productName === "") {
                document.getElementById('nameError').textContent = "Product name is required";
                return false;
            }

            if (!productName.match(lettersOnly)) {
                document.getElementById('nameError').textContent = "Product name only contains letters";
                return false;
            }

            // Check for existing product names
            var existingNames = document.querySelectorAll('.existing-product-name');
            for (var i = 0; i < existingNames.length; i++) {
                if (existingNames[i].textContent.toLowerCase() === productName) {
                    document.getElementById('nameError').textContent = "Product with this name already exists";
                    return false;
                }
            }

            if (isNaN(productPrice) || productPrice <= 0) {
                priceError.textContent = "Enter a valid price";
                return false;
            }

            if (isNaN(productStock) || productStock < 0) {
                stockError.textContent = "Enter a valid stock";
                return false;
            }


            return true;
        }


    </script>


    <script>
        function previewImages(event) {
            var previewContainer = document.getElementById('image-preview');
            previewContainer.innerHTML = '';

            var files = event.target.files;

            for (var i = 0; i < files.length; i++) {
                var file = files[i];
                var reader = new FileReader();

                reader.onload = function (e) {
                    var previewImage = document.createElement('img');
                    previewImage.style.width = '100px';
                    previewImage.style.margin = '10px';
                    previewImage.src = e.target.result;

                    previewContainer.appendChild(previewImage);
                }

                reader.readAsDataURL(file);
            }
        }
    </script>
